{
  "manifest_version": 3,
  "name": "RealLink",
  "version": "1.3",
  "description": "Automatically modify href of anchor tags based on domain-specific rules",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.juejin.cn/*",
        "https://*.zhihu.com/*",
        "https://*.csdn.net/*",
        "https://*.jianshu.leichenlong.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
